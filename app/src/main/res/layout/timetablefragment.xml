<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Monday -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <include layout="@layout/tablecardviewmondaybse" />
            <!-- Include your timetable layout for Monday here -->
        </androidx.cardview.widget.CardView>

        <!-- Tuesday -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <include layout="@layout/tablecardviewtuesdayfragment" />
            <!-- Include your timetable layout for Tuesday here -->
        </androidx.cardview.widget.CardView>

        <!-- Wednesday -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <include layout="@layout/tablecardviewwensdayfragment" />
            <!-- Include your timetable layout for Wednesday here -->
        </androidx.cardview.widget.CardView>

        <!-- Thursday -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <include layout="@layout/tablecardviewthursfragment" />
            <!-- Include your timetable layout for Thursday here -->
        </androidx.cardview.widget.CardView>

        <!-- Friday -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <include layout="@layout/tablecardviewfridayfragment" />
            <!-- Include your timetable layout for Friday here -->
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
